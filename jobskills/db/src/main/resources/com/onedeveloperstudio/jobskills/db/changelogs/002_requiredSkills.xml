<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

  <changeSet author="y.zakharov" id="1">
    <createTable tableName="requiredskill">
      <column name="id" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="caption" type="VARCHAR(200)">
        <constraints nullable="false"/>
      </column>
      <column name="job_id" type="BIGINT"/>
    </createTable>
    <addPrimaryKey columnNames="id" constraintName="PKUK_RequiredSkill" tableName="requiredskill"/>
    <addForeignKeyConstraint baseColumnNames="job_id" baseTableName="requiredskill"
                             constraintName="FK_JOBS_RequiredSkill" referencedColumnNames="id"
                             referencedTableName="jobs"/>
  </changeSet>

</databaseChangeLog>